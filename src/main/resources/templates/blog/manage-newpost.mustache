{{>layout/header}}

<!--summernot api-->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    .post-title {
        margin: 18px auto 17px;
        padding-bottom: 26px;
        border-bottom: 1px solid rgba(0,0,0,.05);
    }
    .post-title .textarea_tit {
        display: block;
        width: 100%;
        height: 56px;
        border: none;
        font-size: 30px;
        color: #202020;
        font-family: Noto Sans DemiLight,AppleSDGothicNeo-Regular,Malgun Gothic,dotum,sans-serif;
        resize: none;
        outline: 0 none;
        line-height: 40px;
        overflow: hidden;
        letter-spacing: -.4px;
    }
    .btn-write {
        display: inline-block;
        min-width: 80px;
        height: 40px;
        padding: 0 23px;
        border-radius: 20px;
        font-size: 13px;
        line-height: 38px;
        box-sizing: border-box;
        text-align: center;
        -webkit-transition: background-color .1s linear,border-color .1s linear;
        -moz-transition: background-color .1s linear,border-color .1s linear;
        transition: background-color .1s linear,border-color .1s linear;
        color: #fff;
        border: 1px solid #000;
        background-color: #000;
        margin-top: 12px;
        margin-bottom: 50px;
    }

    .btn-write:hover {
        background-color: #da3f3a;
        border: 1px solid #da3f3a;
    }
</style>

{{>layout/header-nav}}

<!--post 작성 부분-->
<div  style="margin-top: 50px;">
    <div class="row justify-content-center">
        <div class="col-7">
            <!--셀렉션-->
            <div class="row">
                <div class="col-3">
                    <select class="form-select" id="category" aria-label="Default select example">
                        <option value="0" selected>카테고리</option>
                    </select>
                </div>
            </div>
            <!--제목-->
            <div class="post-title">
                <textarea class="textarea_tit" id="title" placeholder="제목을 입력하세요" style="height: 42px;"></textarea>
            </div>
            <!--post 내용-->
            <textarea id="summernote"></textarea>
            <!--완료 버튼-->
            <button class="btn-write float-end" onclick="postWrite()">완료</button>
        </div>
    </div>
</div>
<!--post 작성 부분 끝-->

<script>
    // summernote 적용 코드
    $('#summernote').summernote({
        placeholder: '',
        tabsize: 2,
        height: 500,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });

    // 완료 버튼 클릭
    function postWrite() {

        var title = $('#title').val();
        let content = $('#summernote').val();
        let category = $('#category').val();

        alert(title + content + category);

        $.ajax({
            type:"post",
            url:'/blog/manage/newpost',
            data: JSON.stringify({"title":title, "content":content}),
            contentType:"application/json; charset=utf-8",
            dataType:"json"
        }).done(res=>{
            location.href = `/user/blog`;
        }).fail(error=>{
            alert(JSON.stringify(error.responseJSON.data));
        });

    }
</script>

