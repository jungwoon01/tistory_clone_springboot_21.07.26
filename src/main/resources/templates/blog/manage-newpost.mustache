{{>layout/header}}

<!--summernot api-->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<link href="/css/blog/manage-newpost.css" rel="stylesheet">

{{>layout/title}}
{{>layout/header-nav}}

<!--post 작성 부분-->
<div  style="margin-top: 50px;">
    <div class="row justify-content-center">
        <div class="col-7">
            <!--셀렉션-->
            <div class="row">
                <div class="col-3">
                    <select class="form-select" id="category" aria-label="Default select example">
                            <option value="0" selected>카테고리</option>
                        {{#blog.categories}}
                            <option value="{{id}}">{{name}}</option>
                        {{/blog.categories}}
                    </select>
                </div>
            </div>
            <!--제목-->
            <div class="post-title">
                <textarea class="textarea_tit" id="title" placeholder="제목을 입력하세요" style="height: 42px;" required></textarea>
            </div>
            <!--post 내용-->
            <textarea id="summernote"></textarea>
            <!--완료 버튼 trigger modal-->
            <button class="btn-write float-end" onclick="btnFinish()">완료</button>
        </div>
    </div>
</div>
<!--post 작성 부분 끝-->

<!-- 완료 Modal -->
<div class="modal fade" id="newPostModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <span>개시글 표시 설정</span>
                <div class="form-check form-switch float-end">
                    <input class="form-check-input" type="checkbox" id="securityCheckBox">
                </div>
                <span class="float-end" id="securityText" style="margin-right: 10px;">비공개</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" onclick="postWrite()">저장</button>
            </div>
        </div>
    </div>
</div>

<script>
    let blogUrl = `{{blog.url}}`;
</script>
<script src="/js/blog/manage-newpost.js"></script>
{{>layout/footer}}

