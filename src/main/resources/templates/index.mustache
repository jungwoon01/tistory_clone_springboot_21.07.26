<link href="/css/index.css" rel="stylesheet">
<style>
    .div-line {
        border-bottom: 2px solid #000;
        margin: 30px 0;
    }

    .div-footer-line {
        border-bottom: 1px solid #DDDDDD;
        margin: 30px 0;
    }

    .latest-post-item {
        padding: 20px 0;
        border-bottom: 1px solid #DDDDDD;
    }

    .popu-blog-title {
        margin: 0;
        padding: 0;
        color: #343a40;
        font-size: 10pt;
        text-decoration: none;
    }

    .popu-blog-title:hover {
        color: #0a58ca;
    }


    .popu-blog-host {
        margin: 0;
        padding: 0;
        color: #AAAAAA;
        font-size: 10pt;
    }

    .popu-blog-bg {
        background-color: #f3f4f5;
        margin: 10px 0;
    }

    .blog-card {
        background-color: white;
        margin: 32px 4px;
        height: 340px;
    }

    .blog-content {
        margin: 24px 20px;
    }

    .popu-blog-title-div {
        margin-bottom: 50px;
    }

    .popu-blog-title {
        color: black;
        text-decoration: none;
    }

    .popu-blog-title:hover {
        color: black;
        text-decoration: underline;
    }

    .blog-sympathy {
        margin: 4px 0;
    }

    .sympathy-num {
        color: #da3f3a;
    }

    .latest-post-title {
        color: black;
        text-decoration: none;
    }

    .latest-post-title:hover {
        color: black;
        text-decoration: underline;
    }

    .latest-post-content {
        width: 600px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
</style>
