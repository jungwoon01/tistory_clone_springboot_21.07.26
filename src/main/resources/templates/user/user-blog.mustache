{{>layout/user/user-top}}

<style>
    .btn-new-blog {
        background-color: #2c3034;
        color: white;
        padding: 10px 36px;
        font-size: 10pt;
        text-decoration: none;
        border-radius: 0;
        font-weight: 100;
    }

    .btn-new-blog:hover {
        background-color: #495057;
        color: white;
    }

    .blog-name {
        font-size: 12pt;
        color: #1a1e21;
        text-decoration: none;
    }
    .blog-name:hover {
        font-size: 12pt;
        color: #1a1e21;
        text-decoration: underline;
    }

    .blog-url {
        font-size: 9pt;
        color: #5a5a5a;
        text-decoration: none;
    }
    .blog-url:hover {
        font-size: 9pt;
        color: #5a5a5a;
        text-decoration: underline;
    }
</style>

<div class="row" style="border-bottom: 1px solid #DDDDDD; width: 100%;">
    <h5>운영 중인 블로그</h5>
</div>
{{#blogs}}
<div class="row align-content-center" style="width: 100%; height: 112px; background-color: white; border: 1px solid #DDDDDD; border-top: none;">
    <div class="col-2">
        <img src="" onerror="this.src='/images/tistory_blog_img.jfif'" style="width: 80px; height: 80px; margin-left: 18px;"/>
    </div>
    <div class="col-10" style="margin-top: 14px;">
        <div>
            <a class="blog-name" href="#">{{name}}</a>
        </div>
        <div>
            <a class="blog-url" href="#">{{url}}</a>
        </div>
    </div>
</div>
{{/blogs}}
<br>
<div class="row">
    <h5>운영·개설 현황</h5>
</div>
<div class="row" style="width: 100%; height: 200px; background-color: white; border: 1px solid #DDDDDD;">

</div>

<div class="row justify-content-end align-content-center" style="width: 100%; height: 70px; background-color: #FAFBFC; border: 1px solid #DDDDDD; border-top: none;">
    <div class="col-3">
        <button class="btn btn-new-blog" onclick="location.href='/manage/blog/make'">새 블로그 만들기</button>
    </div>
</div>

{{>layout/user/user-bottom}}