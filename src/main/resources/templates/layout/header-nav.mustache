        <div class="container">
            <a class="navbar-brand" href="/"><img src="/images/tistory_icon_black.png" height="30" width="30"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item" style="width: 50px;">
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#" style="font-weight: 900; font-size: 12pt;">피드</a>
                    </li>
                    <li class="nav-item" style="width: 30px;">
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" style="font-weight: 900; font-size: 12pt;">스토리</a>
                    </li>
                </ul>
                {{^principal}}
                    <button class="custom-btn" onclick="location.href='/auth/login'">시작하기</button>
                {{/principal}}
                {{#principal}}
                    <div class="dropdown">
                        <a href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="#" onerror="this.src='/images/kakao_character.png'" width="40" height="40" style="border-radius: 20px;">
